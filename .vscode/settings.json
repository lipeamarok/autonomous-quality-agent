{
    "python.defaultInterpreterPath": "${workspaceFolder}\\brain\\.venv\\Scripts\\python.exe",
    "python.terminal.activateEnvironment": true,
    "python.analysis.typeCheckingMode": "strict",

    // Terminal - UTF-8 encoding para exibir caracteres Unicode corretamente
    "terminal.integrated.profiles.windows": {
        "PowerShell UTF-8": {
            "source": "PowerShell",
            "args": ["-NoExit", "-Command", "chcp 65001 | Out-Null; [Console]::OutputEncoding = [System.Text.Encoding]::UTF8"]
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell UTF-8",
    "terminal.integrated.env.windows": {
        "PYTHONIOENCODING": "utf-8",
        "LANG": "en_US.UTF-8"
    },

    // Markdownlint - regras desabilitadas (preferÃªncia pessoal)
    "markdownlint.config": {
        "MD022":false,
        "MD024": false,
        "MD029": false,
        "MD031": false,
        "MD032": false,
        "MD036": false,
        "MD040": false,
        "MD041": false
    }
}
